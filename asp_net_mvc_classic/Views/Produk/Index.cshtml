@model List<asp_net_mvc_classic.Models.Produk>

<h2>Data Produk</h2>
<a asp-action="Create" class="btn btn-primary">Tambah</a>

<form asp-action="Index" method="get" class="mb-3">
	<div class="input-group">
		<input type="text" name="keyword" vslue="@ViewBag.Keyword" class="form-control" placeholder="Cari Nama Produk" />
		<button class="btn btn-primary" type="submit">Search</button>
		<a asp-action="Index" class="btn btn-secondary">Reset</a>
	</div>
</form>

<table class="table mt-3">
	<tr>
		<th>Nama</th>
		<th>Harga</th>
		<th>Stok</th>
		<th>Aksi</th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>@item.NamaProduk</td>
			<td>@item.Harga</td>
			<td>@item.Stok</td>
			<td>
				<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> ||
				<a asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Hapus Data')"> Hapus</a>
			</td>
		</tr>	
	}

</table>